{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.user_edit'|trans({'%id%': user.id}) }}{% endblock %}

{% block content %}
    <section class="site-main section">

        <!-- Profile card -->
        <div class="pure-g pure-g-wide">
            <div class="pure-u-1">
                <h2 class="header-icon">
                    <span class="icon icon-user" aria-hidden="true"></span>
                    <span><h2>{{ 'title.user_edit'|trans({'%id%': user.id}) }}</h2></span>
                </h2>

                <div class="pure-g panels">
                    <div class="pure-u panel panel-collapsed panel-horizontal">
                        <div class="panel-body" style="display: flex; align-items: center;">
                            <div class="panel-cover-image">
                                <img class="pure-img" src="{{ asset('img/profile.png') }}" alt="{{ user.login }}">
                            </div>
                            <div class="panel-content">
                                <div class="panel-head">
                                    <h3 class="panel-title">{{ user.login }}</h3>
                                    <p class="meta">@{{ user.login }}</p>
                                </div>
                                <div class="panel-content">
                                    {{ form_start(form, { method: 'post', 'attr': {'class': 'form form-stacked', 'id': 'profile'}, action: url('user_edit', {'id': user.id}) }) }}
                                    {{ form_widget(form) }}
                                    {{ form_end(form) }}
                                </div>
                                <div class="panel-foot">
                                    <ul class="controls">
                                        <li>
                                            <button form="profile" title="{{ 'action.save'|trans }}">
                                                <span class="icon icon-check" aria-hidden="true"></span>
                                                <span>{{ 'button.save'|trans }}</span>
                                            </button>
                                        </li>
                                        <li>
                                            <a href="{{ url('user_view', { 'id': user.id }) }}">
                                                <span class="icon icon-cross" aria-hidden="true"></span>
                                                <span>{{ 'button.cancel'|trans }}</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>

{% endblock %}