{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.user_delete'|trans }}{% endblock %}

{% block content %}
    <section class="site-main section">

        <!-- Profile card -->
        <div class="pure-g pure-g-wide">
            <div class="pure-u-1">
                <h2 class="header-icon">
                    <span class="icon icon-remove-user" aria-hidden="true"></span>
                    {{ 'title.user_delete'|trans }}
                </h2>

                <div class="pure-g panels">
                    <div class="pure-u panel panel-collapsed panel-horizontal">
                        <div class="panel-body" style="display: flex; align-items: center;">
                            <div class="panel-cover-image">
                                <img class="pure-img" src="{{ asset('img/profile.png') }}" alt="{{ user.login }}">
                            </div>
                            <div class="panel-content">
                                <div class="panel-head">
                                    <h3 class="panel-title">{{ user.login }}</h3>
                                    <p class="meta">ID {{ user.id }}</p>
                                </div>
                                <div class="panel-content">
                                    <p>{{ 'message.delete_user'|trans }} <strong>{{ user.login }}</strong>?</p>
                                    {{ form_start(form, { method: 'post', attr: { 'class': 'form form-stacked', 'id': 'delete' }, action: url('user_delete', {'id': user.id}) }) }}
                                    {{ form_widget(form) }}
                                    {{ form_end(form) }}
                                </div>
                                <div class="panel-foot">
                                    <ul class="controls">
                                        <li>
                                            <button form="delete" title="{{ 'button.delete'|trans }}" class="delete">
                                                <span class="icon icon-remove-user" aria-hidden="true"></span>
                                                <span>{{ 'button.delete'|trans }}</span>
                                            </button>
                                        </li>
                                        <li>
                                            <a href="{{ url('user_view', { 'id': user.id }) }}">
                                                <span class="icon icon-cross" aria-hidden="true"></span>
                                                <span>{{ 'button.cancel'|trans }}</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>

{% endblock %}